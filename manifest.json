{
  "name": "say.hi",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Use this extension to have a minimal blank page which bring happines in your life.",
  "homepage_url": "https://github.com/duraki/say.hi",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_ui": {
    "page": "src/options/index.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "New Tab",
    "default_popup": "src/browser_action/browser_action.html",
    "js": [
      "src/inject/inject.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "src/override/override.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "fonts/*.ttf",
    "src/inject/inject.js",
    "src/options/options.js"
  ]
}
